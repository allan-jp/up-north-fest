
---
// src/components/treegroup-left-1.astro
import Tree from './tree.astro';
---

<!-- Left-edge grouping of trees, tallest to shortest left→right -->
<g id="tree-group-left-1" transform="translate(10,350)">
  <!-- Tallest to shortest: left→right -->
  <g transform="translate(0,0)">
    <Tree width={100} height={160} colorClass="fill-green-800" />
  </g>
  <g transform="translate(90,10)">
    <Tree width={90} height={150} colorClass="fill-green-700" />
  </g>
  <g transform="translate(170,20)">
    <Tree width={80} height={140} colorClass="fill-green-600" />
  </g>
</g>

