// src/components/logo.astro
---
<svg
  width="120"
  height="200"
  viewBox="0 0 120 200"
  xmlns="http://www.w3.org/2000/svg"
>
  <!-- Forest-green vertical pill, width = circle diameter (60) -->
  <rect
    x="30"
    y="60"
    width="60"
    height="100"
    rx="30"
    ry="30"
    fill="#228B22"
    stroke="#000"
    stroke-width="1"
  />

  <!-- Matte-yellow circle overlapping the top of the pill -->
  <circle
    cx="60"
    cy="60"
    r="30"
    fill="#FFD54F"
    stroke="#000"
    stroke-width="1"
  />
</svg>
