
---
import "../styles/landing.css";
import Cloud from "../components/cloud.astro"
import CloudLarge from "../components/cloud-large.astro"
import Logo from "../components/logo.astro"
import TreesLeft1 from "../components/treegroup-left-1.astro"
import TreesRight1 from "../components/treegroup-right-1.astro"
import Water from "../components/water.astro"
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lake-View Landing</title>
  </head>
  <body class="m-0 overflow-hidden">
    <div class="relative h-screen w-screen bg-sky">
      <svg
				viewBox="250 60 300 200"
        preserveAspectRatio="xMidYMid slice"
        class="absolute inset-0 w-full h-full debug-svg"
      >
				<!-- DEBUG: show exact viewBox bounds -->
				<rect
					x="0" y="0"
					width="1000" height="600"
					fill="none"
					stroke="red"
					stroke-width="4"
					opacity="0.5"
				/>       
				
				<!-- Clouds -->
				<g id="cloud-large-left1">
					<CloudLarge />
				</g>


				<!-- LAKE -->
			  <g id="water">
					<Water />
				</g>

				<!-- LOGO SIGN (“Up North”) -->
				<g id="logo">
					<Logo />
				</g>

        <!-- TREES – left side (taller, angled ~20°) -->
				<g id="trees-left">
					<TreesLeft1 />
        </g>

        <!-- TREES – right side (mirrored) -->
				<g id="trees-right">
					<TreesRight1 />
        </g>

      </svg>
    </div>
    <slot />
  </body>
</html>
