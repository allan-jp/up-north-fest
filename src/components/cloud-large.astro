
---
// src/components/cloud-large.astro
export interface Props {
  /** Optional CSS class for styling or debugging */
  class?: string;
  /** Width of the SVG in pixels; defaults to natural bounding box width */
  width?: number;
  /** Height of the SVG in pixels; defaults to natural bounding box height */
  height?: number;
  /** Fill color for the cloud (CSS color code), defaults to white */
  fillColor?: string;
}

// Updated bounding-box: origin at (0,0), width 265, height 158
const {
  class: cls = '',
  width = 275,
  height = 163,
  fillColor = '#ffffff',
  ...rest
} = Astro.props as Props;
---
<svg
  class={cls}
  {...rest}
  width={width}
  height={height}
  viewBox="-5 -5 275 163"
  xmlns="http://www.w3.org/2000/svg"
  role="img"
  aria-label="Large Asymmetric Cumulus Cloud"
>
  <g
    fill={fillColor}
    stroke="#000"
    stroke-width="2"
    stroke-linejoin="round"
  >
    <!-- BIG BACK puff -->
    <circle cx="95" cy="68" r="68" />
    <!-- Central top puff -->
    <circle cx="150" cy="88" r="55" />
    <!-- Main left puff -->
    <circle cx="65" cy="113" r="45" />
    <!-- Central bottom puff -->
    <circle cx="30" cy="128" r="30" />
    <!-- Right large puff -->
    <circle cx="210" cy="108" r="40" />
    <!-- Small accent puff for asymmetry -->
    <circle cx="240" cy="106" r="25" />
  </g>
</svg>

