
---
import "../styles/landing.css";
import Logo from "../components/logo.astro"
import TreesLeft1 from "../components/treegroup-left-1.astro"
import TreesRight1 from "../components/treegroup-right-1.astro"
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lake-View Landing</title>
  </head>
  <body class="m-0 overflow-hidden bg-sky-50">
    <div class="relative h-screen w-screen">
      <svg
				viewBox="255 60 300 200"
        preserveAspectRatio="xMidYMid slice"
        class="absolute inset-0 w-full h-full debug-svg"
      >
				<!-- DEBUG: show exact viewBox bounds -->
				<rect
					x="0" y="0"
					width="1000" height="600"
					fill="none"
					stroke="red"
					stroke-width="4"
					opacity="0.5"
				/>       <!-- SKY BACKGROUND -->
        <defs>
          <linearGradient id="sky" x1="0" x2="0" y1="0" y2="1">
            <stop offset="0%" stop-color="#bde0ff" />
            <stop offset="100%" stop-color="#e0f2fe" />
          </linearGradient>
        </defs>
        <rect width="100%" height="100%" fill="url(#sky)" />

        <!-- LAKE -->
        <path
          d="M0 400 Q500 380 1000 400 L1000 600 L0 600 Z"
          fill="#4ec3f7"
        />

				<!-- LOGO SIGN (“Up North”) -->
				<g id="logo">
					<Logo />
				</g>

        <!-- TREES – left side (taller, angled ~20°) -->
				<g id="trees-left">
					<TreesLeft1 />
        </g>

        <!-- TREES – right side (mirrored) -->
				<g id="trees-right">
					<TreesRight1 />
        </g>

      </svg>
    </div>
    <slot />
  </body>
</html>

