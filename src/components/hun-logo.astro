
---
// src/components/logo.astro

interface Props {
  width?: number
  height?: number
}
const { width = 300, height = 100 } = Astro.props
---
<svg
  width={width}
  height={height}
  viewBox="0 0 300 200"
  xmlns="http://www.w3.org/2000/svg"
>
  <!-- Matte-yellow circle -->
  <circle
    cx="50"
    cy="50"
    r="40"
    fill="#FFD54F"
    stroke="#000"
    stroke-width="2"
  />

  <!-- Green “pill” shape with end radius matching circle (r=40), rotated 90° around its center (200,50) -->
  <rect
    x="100"
    y="20"
    width="120"
    height="80"
    rx="40"
    ry="40"
    fill="#4CAF50"
    stroke="#000"
    stroke-width="2"
    transform="rotate(90 200 120)"
  />
</svg>

