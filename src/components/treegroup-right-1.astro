
---
// src/components/tree-group-right-1.astro
import Tree from './tree.astro';
---

<!-- Right-edge grouping of trees, tallest to shortest left→right -->
<g transform="translate(730,350)">
  <!-- Tallest to shortest: left→right -->
  <g transform="translate(0,0)">
    <Tree width={100} height={160} fillColor="#FFA500" />
  </g>
  <g transform="translate(90,10)">
    <Tree width={90} height={150} fillColor="#FFA500" />
  </g>
  <g transform="translate(170,20)">
    <Tree width={80} height={140} fillColor="#FFA500" />
  </g>
</g>

